override cogl_perspective kwargs
static PyObject *
_wrap_cogl_perspective (PyObject *self,
                        PyObject *args,
                        PyObject *kwargs)
{
  static char *kwlist[] = { "fovy", "aspect", "z_near", "z_far", NULL };
  float fovy, aspect, z_near, z_far;

  fovy = aspect = z_near = z_far = 0.0;

  if (!PyArg_ParseTupleAndKeywords(args, kwargs,"ffff:perspective", kwlist, &fovy, &aspect, &z_near, &z_far))
    return NULL;
    
  cogl_perspective (CLUTTER_FLOAT_TO_FIXED (fovy),
                    CLUTTER_FLOAT_TO_FIXED (aspect),
                    CLUTTER_FLOAT_TO_FIXED (z_near),
                    CLUTTER_FLOAT_TO_FIXED (z_far));

  Py_INCREF (Py_None);
  return Py_None;
}
