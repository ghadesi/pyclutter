static PyObject *
_wrap_cogl_get_viewport (PyObject *self)
{
  ClutterFixed viewport[4] = { 0, };

  cogl_get_viewport (viewport);

  return Py_BuildValue ("(ffff)",
                        CLUTTER_FIXED_TO_FLOAT (viewport[0]),
                        CLUTTER_FIXED_TO_FLOAT (viewport[1]),
                        CLUTTER_FIXED_TO_FLOAT (viewport[2]),
                        CLUTTER_FIXED_TO_FLOAT (viewport[3]));
}
