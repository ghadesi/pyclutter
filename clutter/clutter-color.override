override clutter_color_to_hls noargs
static PyObject *
_wrap_clutter_color_to_hls (PyGBoxed *self)
{
        ClutterColor *color;
        gfloat h, l, s;

        color = pyg_boxed_get (self, ClutterColor);
        clutter_color_to_hls (color, &h, &l, &s);

        return Py_BuildValue ("(ddd)", h, l, s);
}
