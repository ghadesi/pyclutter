static PyObject *
_wrap_clutter_color_from_hls (PyObject *self,
			      PyObject *args,
                              PyObject *kwargs)
{
        static char *kwlist[] = { "hue", "luminance", "saturation", NULL };
        gfloat h, l, s;
        ClutterColor color = { 0, };

        if (!PyArg_ParseTupleAndKeywords (args, kwargs,
